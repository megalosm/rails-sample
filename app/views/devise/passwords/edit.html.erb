<div class="session_content">
  <div class="header">Moving Limes</div>
  <h4>Change your password</h4>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div><%= f.password_field :password, :autofocus => true, :placeholder => 'New password' %></div></br>
      <div><%= f.password_field :password_confirmation, :placeholder => 'Confirm new password' %></div></br>
      <div><%= f.submit "Change my password", :class => 'app_btn' %></div>
  <% end %>
</div>